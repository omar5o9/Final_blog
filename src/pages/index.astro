---
import PageLayout from "@/layouts/Base";
import PostPreview from "@/components/blog/PostPreview";
import SocialList from "@/components/SocialList";
import { getAllPosts, sortMDByDate } from "@/utils";

const MAX_POSTS = 10;
const allPosts = await getAllPosts();
const allPostsByDate = sortMDByDate(allPosts).slice(0, MAX_POSTS);


---

<PageLayout meta={{ title: "Home" }}>
	<section>
		<h1 class="title mb-6 text-blue-600">Hello, This Is My Blog!</h1>
		<p class="mb-4 text-green-300">
			Hi, this is my blog about soccer.
		</p>
		<SocialList />
		<img src="https://media3.giphy.com/media/RMytx3W1vmUEoHpb41/giphy.gif?cid=ecf05e478nxl0vainscphc0zaxla1zpxwhi8x0epqgahp6no&ep=v1_gifs_search&rid=giphy.gif&ct=g" alt="Eden">
	</section>
	<section aria-label="Blog post list" class="mt-16">
		<h2 class="title mb-4 text-xl text-violet-700">Posts</h2>
		<ul class="space-y-4 sm:space-y-2 text-violet-600">
			{
				allPostsByDate.map((p) => (
					<li class="flex flex-col gap-x-2 sm:flex-row">
						<PostPreview post={p} />
					</li>
				))
			}
		</ul>
	</section>
	
</PageLayout>
